  <script>
    var recordedChunks = [];
    var mediaRecorder;
    var res
    var options = {mimeType: 'audio/ogg'};
    const handleSuccess = function(stream) {
      mediaRecorder = new MediaRecorder(stream, options);
      mediaRecorder.ondataavailable = function(e) {
        if (e.data.size > 0) {
          recordedChunks.push(e.data);
        }
      };
      mediaRecorder.start();

      setInterval( () => {
        mediaRecorder.stop()
        var audio_blob = new Blob(recordedChunks, {type:'audio/ogg'})
        localStorage.test = audio_blob
        var audio = new FormData();
        audio.append('audio', audio_blob, 'audio.ogg');
        fetch('/analyze', {
          method : 'POST',
          body: audio
        }).then(r =>{
          r.json().then(data => {
            console.log(data)
          })
        })
        recordedChunks = [];
        mediaRecorder.start()
      },5000)
    };

    navigator.mediaDevices.getUserMedia({ audio: true, video: false })
    .then(handleSuccess);
  </script>
